{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Message",
  "description": "Schema representing a message within a conversation.",
  "type": "array",
  "properties": {
    "id": {
      "type": "integer",
      "minimum": 1
    },
    "conversation_id": {
      "type": "integer",
      "minimum": 1,
      "description": "Foreign key referencing conversations table."
    },
    "sender_id": {
      "type": "integer",
      "minimum": 1,
      "description": "User ID of the sender."
    },
    "message": {
      "type": "string",
      "description": "Message body text."
    },
    "is_read": {
      "type": "integer",
      "enum": [0, 1],
      "description": "0 = unread, 1 = read."
    },
    "created_at": {
      "type": ["string", "null"],
      "format": "date-time",
      "description": "Timestamp when the message was created."
    },
    "updated_at": {
      "type": ["string", "null"],
      "format": "date-time",
      "description": "Timestamp when the message was last updated."
    }
  },
  "required": [
    "conversation_id",
    "sender_id",
    "message",
    "is_read"
  ]
}
